# Man with fallback

test $# -gt 0 && (\
  /usr/bin/man $@ 2> /dev/null \
    || ( \
      /usr/bin/man -P cat zshbuiltins \
        | sed "s/."$( printf "\b" )"//g" \
        | grep "^       $1 " > /dev/null \
      && /usr/bin/man zshbuiltins \
        | less -p "^       $1 " \
      ) \
    || (>&2 echo "No manual entry for $@") \
  ) \
  || (>&2 echo "What manual page do you want?")
